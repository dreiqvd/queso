message="$(cat $1)"
prefix="portfolio|portfolio2|nearbai|whisquers|cashflow|wedding|ui-kit|common|shared|chore|config"
regex="^($prefix): [a-z].*$"
if ! echo "$message" | grep -iqE "$regex";
then
  echo "Invalid Commit Message Format"
  echo ""
  echo "Valid pattern:"
  echo "$prefix:<space><message starting with a lowercase letter>"
  echo ""
  echo "Example:"
  echo "feat: add textbox component"
  echo ""
  echo "Your commit message was:"
  echo $message
  echo ""
  echo "------------------------------"
  echo "For more information, check script in .husky/commit-msg"
  echo "-"
  exit 1
fi
